{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "ES2018"
    ],
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "paths": {
      "@/*": [
        "source/*"
      ],
      "@Core/*": [ "source/core/*" ],
      "@Web/*": [ "source/view/*" ],
      "@Common/*": ["source/common/*"],
    },
  },
  "include": [
    "source/**/*.ts",
    "type/**/*.d.ts"
  ],
  "exclude": [
    // "node_modules/"
    "build/"
  ],
}